
{
  "manifest_version": 3,  
  "name": "PantryPal",
  "version": "1.0",
  "description": "Simple extension which simplifies your weekly meal planning and groceries!",
  "action": {  
    "default_popup": "index.html",
    "default_icon": {
      "48": "icons/pantrypal_48x48.png",
      "16": "icons/pantrypal_16x16.png",
      "128": "icons/pantrypal_128x128.png"
    }
  },
  "permissions": [
    "storage"
  ],
  "icons": {
    "48": "icons/pantrypal_48x48.png",
    "16": "icons/pantrypal_16x16.png",
    "128": "icons/pantrypal_128x128.png"
  }
}
